<header
    class="w-full px-6 py-4 shadow-sm bg-white fixed top-0 z-50 flex justify-center items-center"
>
    <div
        class="container mx-auto max-w-10xl flex flex-row justify-between items-center relative"
    >
        <!-- Logo -->
        <div class="flex items-center space-x-8">
            <a href="/" class="flex items-center">
                <span class="text-xl font-bold text-gray-800">TiendaOnline</span
                >
            </a>

            <div
                class="hidden md:flex flex-row justify-end items-center space-x-8"
            >
                <a href="/" class="hover:text-accent transition-colors"
                    >Inicio</a
                >
                <a href="/productos" class="hover:text-accent transition-colors"
                    >Productos</a
                >
                <a href="/contacto" class="hover:text-accent transition-colors"
                    >Contacto</a
                >
                <a
                    href="/sobre-nosotros"
                    class="hover:text-accent transition-colors"
                    >Sobre nosotros</a
                >
            </div>
        </div>

        <!-- Desktop Navigation -->
        <nav class="hidden md:flex flex-row justify-end items-center space-x-8">
            <!-- Desktop Search -->
            <div class="relative hidden md:block">
                <input
                    type="text"
                    placeholder="Buscar..."
                    class="py-2 pl-10 pr-4 w-40 lg:w-64 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                />
                <button
                    class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none"
                >
                    <img
                        src="/icons/search.svg"
                        alt="Buscar"
                        class="w-5 h-5 text-gray-500"
                    />
                </button>
            </div>

            

            <!-- Cart Icon -->
            <a
                href="/carrito"
                class="p-2 rounded-full hover:bg-accent/10 hover:text-accent transition-colors"
            >
                <img
                    src="/icons/shopping_cart.svg"
                    alt="Shopping cart"
                    class="w-5 h-5 text-gray-500"
                />
            </a>
        </nav>

        <!-- Mobile Controls -->
        <div class="flex items-center space-x-2 md:hidden">
            <!-- Mobile Search -->
            <div class=" block md:hidden">
                <button
                    class="p-2 rounded-full hover:bg-accent/10 hover:text-accent transition-colors"
                >
                    <img
                        src="/icons/search.svg"
                        alt="Buscar"
                        class="w-5 h-5 text-gray-500"
                    />
                </button>
            </div>
            <!-- Mobile Cart Icon -->
            <a
                href="/carrito"
                class="p-2 rounded-full hover:bg-accent/10 hover:text-accent transition-colors"
            >
                <img
                    src="/icons/shopping_cart.svg"
                    alt="Shopping cart"
                    class="w-5 h-5 text-gray-500"
                />
            </a>

            <!-- Mobile menu button -->
            <button
                id="mobile-menu-button"
                class="p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-accent"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu Dropdown -->
        <div
            id="mobile-menu"
            class="absolute top-full left-0 right-0 bg-white shadow-md rounded-b-lg mt-1 p-4 hidden z-50"
        >
            <!-- Mobile Search - Full Width -->
            

            <!-- Mobile Navigation Links -->
            <nav class="flex flex-col space-y-4">
                <a
                    href="/"
                    class="py-2 px-4 hover:bg-accent/10 hover:text-accent rounded-md transition-colors"
                    >Inicio</a
                >
                <a
                    href="/productos"
                    class="py-2 px-4 hover:bg-accent/10 hover:text-accent rounded-md transition-colors"
                    >Productos</a
                >
                <a
                    href="/contacto"
                    class="py-2 px-4 hover:bg-accent/10 hover:text-accent rounded-md transition-colors"
                    >Contacto</a
                >
                <a
                    href="/sobre-nosotros"
                    class="py-2 px-4 hover:bg-accent/10 hover:text-accent rounded-md transition-colors"
                    >Sobre nosotros</a
                >
            </nav>
        </div>
    </div>
</header>

<script>
    // JavaScript to toggle mobile menu
    document.addEventListener("DOMContentLoaded", () => {
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener("click", () => {
                mobileMenu.classList.toggle("hidden");
            });
        }
    });
</script>
